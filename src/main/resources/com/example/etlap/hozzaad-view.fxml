<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.etlap.HozzaadController">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="200.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="30.0" prefHeight="150.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TextField fx:id="inputNev" GridPane.columnIndex="1" />
        <Label text="név" />
        <Label text="Leírás" GridPane.rowIndex="1" />
        <Label text="Kategoria" GridPane.rowIndex="2" />
        <Label text="Ár" GridPane.rowIndex="3" />
        <TextField fx:id="inputLeiras" promptText="Kategória" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Spinner fx:id="inputAr" editable="true" minWidth="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="10" initialValue="100" max="999" min="1" />
            </valueFactory>
        </Spinner>
        <ChoiceBox fx:id="inputKategoria" minWidth="100.0" prefWidth="200.0" value="Előétel" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Előétel" />
                    <String fx:value="Főétel" />
                    <String fx:value="Desszert" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <Button minWidth="100.0" mnemonicParsing="false" onAction="#onHozzadButtonClick" prefHeight="26.0" prefWidth="315.0" text="Hozzáadás" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" />
    </children>
</GridPane>
